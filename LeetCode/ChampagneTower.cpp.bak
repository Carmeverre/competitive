// 2^n glasses to fill nth row (0-indexed), so (2^n - 1) to fill first n rows
class Solution {
public:
    double champagneTower(int poured, int query_row, int query_glass) {
        // poured enough to fill first query_row rows
        if (poured >= (1 << query_row) - 1) {
            return 1;
        }
    }
};
